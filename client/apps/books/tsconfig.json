{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "view/*": ["../../packages/view/src/*"],
      "core/*": ["../../packages/core/src/*"]
    },
    "incremental": true
  },
  "include": [
    "src",
    "App.tsx",
    "index.ts",
    "../../packages/core/src/**/*",
    "../../packages/view/src/**/*"
  ],
  "exclude": ["node_modules"]
}
